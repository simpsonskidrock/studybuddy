{
  "rules": {
    "Users": {
      ".read": "auth.uid != null",
      "$uid": {
        "uid": {
                ".write": false,
        },
        "displayName": {
                ".write": "auth.uid != null && auth.uid == $uid"
        },
        "email": {
                ".write": false
        },
        "description": {
                ".write": "auth.uid != null && auth.uid == $uid"
        },
        "fieldOfStudy": {
                ".write": "auth.uid != null && auth.uid == $uid"
        },
        "profileImageUrl": {
                ".write": "auth.uid != null && auth.uid == $uid"
        },
        "hashtags": {
                ".write": "auth.uid != null && auth.uid == $uid"
        },
        "likedUsers": {
                ".write": "auth.uid != null"
        },
        "contacts": {
                ".write": "auth.uid != null"
        }
      }
    }
  }
}
